            },
            "key": "properties.NAME_2"
          },
          "as": "geo"
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "year_2021",
          "type": "quantitative",
          "scale": {
            "reverse": true,
            "range": "diverging",
            "domain": [230, 490]
          },
          "legend": {"titleFont": "Helvetica Neue",
                     "titleFontWeight":"normal"},
          "title": "Runs"
        },
        "opacity": {
          "condition": {"test": "county_highlight==2021", "value": 1},
